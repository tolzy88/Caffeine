<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		xmlns:vm="using:Caffeine.ViewModels"
        x:DataType="vm:MainWindowViewModel"
        mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="300"
		Width="400" Height="300"
        x:Class="Caffeine.MainWindow"
        Title="Caffeine"
		Icon="caffeine.ico">
	<StackPanel Margin="20" VerticalAlignment="Center" HorizontalAlignment="Center" Spacing="15">

		<TextBlock Text="Windows will not go to sleep while this program is running."
				   TextWrapping="Wrap"
                   FontWeight="Bold"
                   FontSize="16"
                   HorizontalAlignment="Center"
                   TextAlignment="Center"/>

		<StackPanel Margin="0,10,0,0" Spacing="10">
			<CheckBox Content="Keep Display Awake"
					  IsChecked="{Binding KeepDisplayAwake}"
					  HorizontalAlignment="Center"/>
		</StackPanel>

		<Button Content="github.com/tolzyfrolz/Caffeine"
				Command="{Binding AboutInfoClicked}"
				Classes="LinkButton"
				HorizontalAlignment="Center"
				Margin="0,10,0,0"
				Background="Transparent"
				BorderThickness="0"
				Foreground="Blue"
				Cursor="Hand"/>
	</StackPanel>
</Window>
