<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:vm="using:Caffeine.ViewModels"
             x:DataType="vm:AppViewModel"
             x:Class="Caffeine.App"
             RequestedThemeVariant="Default">
             <!-- "Default" ThemeVariant follows system theme variant. "Dark" or "Light" are other available options. -->
	<TrayIcon.Icons>
		<TrayIcons>
			<TrayIcon 
				Icon="caffeine.ico"
				ToolTipText="Caffeine"
				IsVisible="{Binding TrayVisible}"
				Command="{Binding TrayClickCommand}">
				<TrayIcon.Menu>
					<NativeMenu>
						<NativeMenuItem 
							Header="Exit"
							Command="{Binding TrayExitCommand}"/>
					</NativeMenu>
				</TrayIcon.Menu>
			</TrayIcon>
		</TrayIcons>
	</TrayIcon.Icons>
    <Application.Styles>
        <FluentTheme />
    </Application.Styles>
</Application>